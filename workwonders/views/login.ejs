<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WorkWonders - Se connecter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/core_pages.css">
    <style>
        body {
            padding-top: 4rem;
            color: #ffffff;
        }

        main {
            animation: fadeInUp 1s ease-in-out;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes fadeInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateX(-20px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
    <script src="https://www.google.com/recaptcha/api.js?render=6LeV9_cpAAAAABdPiJCwvhRHAfmHsr3CCRPrJlRQ"></script>
    <script>
        function onSubmit(token) {
            document.getElementById("demo-form").submit();
        }
    </script>
</head>

<body data-bs-theme="dark">
    <%- include("./header.ejs") %>

    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <form method="post" id="demo-form">
                        <img class="mb-4" src="/img/logoWorkWandersWhite.webp" alt="" width="72" height="57">
                        <h1 class="h3 mb-3 fw-normal">Se connecter</h1>
                        <% if (typeof error !== 'undefined') { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                        <% } %>
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="name@example.com" required>
                            <label for="email">Adresse email</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required>
                            <label for="password">Mot de passe</label>
                        </div>
                        <div class="form-check text-start my-3">
                            <input class="form-check-input" type="checkbox" name="rememberMe" value="true"
                                id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">Remember me</label>
                        </div>
                        <button class="g-recaptcha btn btn-primary w-100 py-2" data-sitekey="6LeV9_cpAAAAABdPiJCwvhRHAfmHsr3CCRPrJlRQ" data-callback='onSubmit' data-action='submit'>Se connecter</button>
                    </form>
                    <button class="btn btn-primary btn-block mt-3">
                        <a href="/users/create_account" class="text-white text-decoration-none">Cr√©er un compte</a>
                    </button>
                </div>
            </div>
        </div>
    </main>
    <%- include("./footer.ejs") %>
</body>

</html>
